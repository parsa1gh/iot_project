<!DOCTYPE html>
<html lang="fa" dir="rtl">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>داشبورد پرستار - سیستم تشخیص</title>
    <link rel="stylesheet" href="/styles/nurseDashboard.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

</head>

<body>
    <div class="dashboard-container">
        <!-- Sidebar -->
        <%-include("partials/_sidebar")%>
            <!-- Main Content -->
            <main class="main-content">
                <!-- Header -->
                <%-include("partials/_header")%>

                    <!-- Stats Cards -->
                    <div class="stats-grid">
                        <div class="stat-card">
                            <div class="stat-number" id="totalPatients">۰</div>
                            <div class="stat-label">بیمار تحت مراقبت</div>
                        </div>
                    </div>



                    <!-- Patients List -->
                    <section class="patients-section">
                        <div class="section-header">
                            <h2>لیست بیماران تحت مراقبت</h2>
                            <input type="text" class="search-box" placeholder="جستجوی بیمار..." id="searchInput">
                        </div>

                        <table class="patients-table">
                            <thead>
                                <tr>
                                    <th>نام بیمار</th>
                                    <th>شماره تماس</th>
                                    <th>تاریخ تولد</th>
                                    <th>پرستار مسئول</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody id="patientsTableBody">
                            </tbody>
                        </table>
                    </section>
            </main>
    </div>


    <!-- Edit Patient Modal -->
    <!-- Edit Patient Modal -->
    <div id="editPatientModal" class="modal hidden">
        <div class="modal-content">
            <h2>ویرایش بیمار</h2>
            <form id="editPatientForm">
                <!-- اطلاعات پایه -->
                <div class="form-group">
                    <label>نام</label>
                    <input type="text" name="firstName" id="firstName" required />
                </div>
                <div class="form-group">
                    <label>نام خانوادگی</label>
                    <input type="text" name="lastName" id="lastName" required />
                </div>
                <div class="form-group">
                    <label>شماره تماس</label>
                    <input type="text" name="phoneNumber" id="phoneNumber" />
                </div>
                <div class="form-group">
                    <label>تاریخ تولد</label>
                    <input type="date" name="birthday" id="birthday" />
                </div>

                <!-- ورودی‌های RFID و BLE -->
                <div class="form-group">
                    <label>RFID</label>
                    <input type="text" name="rfid" id="rfid" readonly />
                    <button type="button" onclick="scanDevice('rfid')">اسکن RFID</button>
                </div>

                <div class="form-group">
                    <label>BLE Device</label>
                    <input type="text" name="ble" id="ble" readonly />
                    <button type="button" onclick="scanDevice('ble')">اسکن BLE</button>
                </div>

                <!-- Face -->
                <div class="form-group">
                    <label>تصویر چهره</label>
                    <input type="file" name="face" id="face" accept="image/*" />
                    <img id="facePreview" style="width:100px;margin-top:10px;display:none;" />
                </div>

                <div class="actions">
                    <button type="button" onclick="closeModal()">لغو</button>
                    <button type="submit">ذخیره</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Toast container -->
    <div id="toast-container" style="position:fixed;top:16px;right:16px;z-index:2000;"></div>




    <script src="/js/nurseDashboard.js"></script>
</body>

</html>